<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!--
        Item schema
    -->
    <class name="com.youreffect.model.Item" table="Item">
        <meta attribute="class-description">
            This class contains the item detail.
        </meta>
        <id name="itemId" type="string" column="item_id" />
        <property name="userId" column="user_id" type="string"/>
        <property name="name" column="name" type="string"/>
        <property name="energy" column="energy" type="string"/>
        <property name="quantity" column="quantity" type="int"/>
        <property name="specs" column="specs" type="string"/>
        <property name="dateCreated" column="date_created" type="string"/>
    </class>
</hibernate-mapping>